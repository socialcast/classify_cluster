#!/usr/bin/env ruby

require "classify_cluster"
require "commander/import"

command :puppet do |c|
  c.syntax = 'classify puppet <hostname> [options]'
  c.description = 'Returns on STDOUT YAML dump of this nodes puppet config'
  c.options '--config STRING', String, 'Location to config file.'
  c.action do |args, options|
    options.default :config => File.join('/etc', 'cluster.yml')
    say "#{options.config}##{args.inspect}"
  end
end